{
	"name": "why-app",
	"version": "0.0.1",
	"author": "OCSoft42",
	"description": "A philosophical tool for your existential journey.",
	"keywords": [
		"42",
		"nihilism",
		"absurdism",
		"existentialism",
		"epistemology",
		"philosophy",
		"meaning-of-life",
		"thought-experiment",
		"self-discovery",
		"mental-health",
		"personal-growth",
		"introspection",
		"ethics",
		"morality"
	],
	"private": true,
	"type": "module",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"host:beta": "firebase --project why-app deploy --only hosting:beta",
		"host:prod": "firebase --project why-app deploy --only hosting:prod",
		"test": "vitest",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^4.5.10",
		"@neoconfetti/svelte": "^1.0.0",
		"@sveltejs/adapter-auto": "^3.2.1",
		"@sveltejs/kit": "^2.5.10",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@types/eslint": "8.56.0",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"@vite-pwa/sveltekit": "^0.3.0",
		"dotenv": "^16.4.5",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.39.3",
		"firebase": "^10.12.2",
		"nanoid": "^5.0.7",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.4",
		"rxfire": "^6.0.5",
		"rxjs": "^7.8.1",
		"svelte": "^4.2.18",
		"svelte-check": "^3.8.0",
		"tslib": "^2.6.3",
		"typescript": "^5.4.5",
		"vite": "^5.2.13",
		"vitest": "^1.6.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ortwic/why-app.git"
	},
	"bugs": {
		"url": "https://github.com/ortwic/why-app/issues"
	},
	"homepage": "https://why-app.web.app",
	"dependencies": {
		"svelte-simple-modal": "^1.6.2"
	}
}
